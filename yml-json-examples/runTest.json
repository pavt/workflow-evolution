{
  "name": "CI",
  "on": {
    "push": {
      "branches": [
        "master"
      ]
    },
    "pull_request": {
      "branches": [
        "master"
      ]
    },
    "workflow_dispatch": null
  },
  "jobs": {
    "build": {
      "runs-on": "ubuntu-latest",
      "steps": [
        {
          "name": "Cancel Previous Runs",
          "uses": "styfle/cancel-workflow-action@0.9.0",
          "with": {
            "access_token": "${{ github.token }}"
          }
        },
        {
          "uses": "actions/checkout@v2"
        },
        {
          "name": "Run unit tests",
          "run": "bash ./scripts/runTest.sh"
        }
      ]
    }
  }
}